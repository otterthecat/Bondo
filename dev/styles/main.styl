@import 'jeet'
@import 'rupture'

@import './blocks'
@import './variables'

body
  background: baseColor
  font-family: primaryFont
  font-size: 1.4rem
  line-height: 1.6rem
  margin: 0
  minWidth: minWidth
  padding: 0

header
  span(1)
  background: darken(baseColor, 80%)
  height: 60px

  menu
    center(maxWidth)

    li
      col(1/3, cycle: 3)
      color: neutralLight
      font-size: 1.6rem
      text-align: center

.banner
  span(1)
  background: highlightColor
  color: neutralLight
  height: 300px

  h1
    center(maxWidth)

.main-content
  center(maxWidth)
  border: 1px solid darken(baseColor, 20%)
  min-height: 600px

.main-footer
  center(maxWidth)
  background: accentColor
  padding: 2.5rem