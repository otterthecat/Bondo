@import 'jeet'
@import 'rupture'

@import './blocks'
@import './variables'
@import './mixins'

body
  background: baseColor
  font-family: primaryFont
  margin: 0
  minWidth: minWidth
  padding: 0

.page-header
  cf(span(1))
  background: darken(baseColor, 80%)
  height: 6rem

  menu
    center(maxWidth)

    li
      col(1/3, cycle: 3)
      color: neutralLight
      font-size: 1.6rem
      text-align: center

.banner
  cf(span(1))
  background: highlightColor
  color: neutralLight
  height: 300px
  padding: 2rem

.page-content
  center(maxWidth)
  border: 1px solid darken(baseColor, 20%)
  min-height: 60rem
  padding: 1rem 2rem

.page-footer
  center(maxWidth)
  background: accentColor
  padding: 2.5rem

.error
  notify(errorColor)

.success
  notify(successColor)

.warning
  notify(warningColor)